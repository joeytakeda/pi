{% extends 'base.html.twig' %}

{# #############################################
#                VARIABLES                    #
############################################# #}

{% set title = 'Profile Keywords: ' ~ profileKeyword.label %}

{# #############################################
#                TITLE BLOCK                  #
############################################# #}

{% block title %}
{{ title }}
{% endblock %}

{# #############################################
#             PAGE HEADER BLOCK               #
############################################# #}

{% block pageheader %} 
<ol class="breadcrumb">
    <li><a href="{{ path('homepage') }}">Home</a></li>
    <li><a href="{{ path('profile_keyword_index') }}">Profile Keywords</a></li>
    <li class="active">{{profileKeyword.label|u.truncate(30,'...') }}</li>
</ol>

<h1>{{ title }}</h1>
{% endblock %} 
                
{% block body %}
    {% if profileKeyword.videos %}
        <h2>Videos</h2>
        {% include('gallery.html.twig') with { 'useFiguration': 'true'} %}

        <div class="navigation">
            {{ knp_pagination_render(videos) }}
        </div>
    {% endif %}


{% endblock %}
