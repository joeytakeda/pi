{% extends 'base.html.twig' %}

{# #############################################
#                VARIABLES                    #
############################################# #}

{% set title = video %}
{% set hasScreenshots = (video.screenShots | length > 0) %}
{% set hasProfiles = (video.videoProfiles | length > 0) %}

{# #############################################
#                TITLE BLOCK                  #
############################################# #}

{% block title %}
{{ title }}
{% endblock %}

{# #############################################
#                MAIN CLASS BLOCK             #
############################################# #}

{% block mainclass %}video{% endblock %}


{# #############################################
#             PAGE HEADER BLOCK               #
############################################# #}

{% block pageheader %}
    <ol class="breadcrumb">
        <li><a href="{{ path('homepage') }}">Home</a></li>
        <li><a href="{{ path('video_index') }}">Videos</a></li>
        <li class="active">{{ video.title|u.truncate(30, 'â€¦') }}</li>
    </ol>
    <h1>{{ title }}</h1>
    {% if video.figuration %}
        <h2 class="figuration-link-heading">Figuration: 
            <a href="{{ path('figuration_show', {'id': video.figuration.id}) }}">{{ video.figuration }}</a>
        </h2>
    {% endif %}
{% endblock %} 

{# #############################################
#                  BODY BLOCK                 #
############################################# #}

{% block body %}
    <div class="row">
        
        
        {# #################
         #  VIDEO PLAYER  #
         ################# #}
        <div class="col-md-6">
            <div class="iframe-container">
                {{ video.player|raw }}
            </div>

        </div>
        
        {# #################
         #  DESCRIPTION   #
         ################# #}

        <div class="col-md-6 video-show-description details">
            <h3>Description</h3>
            <div class="description-content">
                
            {% if video.description %}
                {{ video.description|nl2br }}
            {% else %}
                No description available.
            {% endif %}
