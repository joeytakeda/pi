{% extends 'base.html.twig' %}

{% block title %}Figuration List{% endblock %}

{% block pageheader %}
    <h1>Figuration List</h1>
    <p class="count">
        Displaying {{ figurations|length }} figurations of {{ figurations.getTotalItemCount }} total. </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('figuration_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}
        </div>
    </div>

    {% include 'NinesUtilBundle:term/partial:index.html.twig' with {'terms': figurations, 'path': 'figuration_show'} %}

    <div class="navigation">
        {{ knp_pagination_render(figurations) }}
    </div>

{% endblock %}
