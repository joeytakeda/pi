{% extends 'base.html.twig' %}

{% block pageheader %}
    <h1>Channel</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('channel_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back </a>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="{{ path('channel_show', {'id': channel.id}) }}">
                {{ channel }}
            </a>
        </div>
        <div class="panel-body">
            <div class="container">
                <div class="col-sm-3">
                    {% if channel.thumbnailUrl %}
                        <a href="{{ path('channel_show', {'id': channel.id}) }}"> <img src="{{ channel.thumbnailUrl }}">
                        </a>
                    {% endif %}
                </div>
                <div class="col-sm-9">
                    {{ channel.description|nl2br }}
                </div>
            </div>
            <p class="text-right"><a href="https://www.youtube.com/channel/{{ channel.youtubeId }}">Youtube Channel</a>
            </p>
        </div>
        <div class="panel-footer text-right">
            {% if channel.publishedAt %}Published {{ channel.publishedAt|date }}.{% endif %}
        </div>
    </div>

    {% if channel.videos|length > 0 %}
        <h2>Videos</h2>
        <ul>
            {% for video in channel.videos %}
                <li><a href="{{ path('video_show', {'id': video.id }) }}">{{ video }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

{% endblock %}
