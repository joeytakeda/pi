{% extends 'base.html.twig' %}

{% set title = 'Playlist: ' ~ playlist.title %}

{% block title %}
{{ title }}
{% endblock %}

{% block pageheader %} 
    <h1>{{ title }}</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('playlist_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Youtube URL</th>
                <td><a href="https://www.youtube.com/playlist?list={{ playlist.youtubeId }}">{{ playlist.title }}</a></td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ playlist.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ playlist.description }}</td>
            </tr>
            <tr>
                <th>Youtube Id</th>
                <td>{{ playlist.youtubeId }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{% if playlist.publishedAt %}{{ playlist.publishedAt|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ playlist.status }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if playlist.created %}{{ playlist.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if playlist.updated %}{{ playlist.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <h2>Videos</h2>
    {% if videos|length > 0 %}
        {% include('gallery.html.twig') with {'videos': videos, 'useFiguration': true} %}

    {% endif %}
    

{% endblock %}
