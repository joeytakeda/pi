{% extends 'base.html.twig' %}


{% set title = 'Captions' %}

{% block title %}
{{ title }}
{% endblock %}

{% block pageheader %} 
    <h1>{{ title }}</h1>
    <p class="count">
        Displaying {{ captions|length }} captions of {{ captions.getTotalItemCount }} total.
    </p>
{% endblock %} 

{% block body %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Video</th>
                <th>Trackkind</th>
                <th>Language</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {% for caption in captions %}
                <tr>
                    <td>
                        <a href="{{ path('caption_show', { 'id': caption.id }) }}">
                            {{ caption.video }}
                        </a>
                    </td>
                    <td>{{ caption.trackKind }}</td>
                    <td>{{ caption.language }}</td>
                    <td>{{ caption.name }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(captions) }}
    </div>

{% endblock %}
