{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Profile Element</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('profile_element_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}                
                <a href="{{ path('profile_element_edit', { 'id': profileElement.id }) }}" class="btn btn-default">
                    <span class='glyphicon glyphicon-edit'></span> Edit
                </a>
            {% endif %}
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>
                    {{ profileElement.name }}
                </td>
            </tr>
            <tr>
                <th>Label</th>
                <td>
                    {{ profileElement.label }}
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>
                    {{ profileElement.description }}
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if profileElement.created %}{{ profileElement.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if profileElement.updated %}{{ profileElement.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
