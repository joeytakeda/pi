{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Profile Keyword</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('profile_keyword_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
        </div>
    </div>
                
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Element</th>
                <td>{{ profileKeyword.profileElement }}</td>
            </tr>
            <tr>
                <th>Keyword</th>
                <td>{{ profileKeyword }}</td>
            <tr>
                <th>Created</th>
                <td>{% if profileKeyword.created %}{{ profileKeyword.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if profileKeyword.updated %}{{ profileKeyword.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {% if profileKeyword.videos %}
        <h2>Videos</h2>
        <ul>
            {% for video in videos %}
                <li><a href="{{ path('video_show', {'id': video.id}) }}">{{ video }}</a></li>
                {% endfor %}
        </ul>
    {% endif %}

{% endblock %}
