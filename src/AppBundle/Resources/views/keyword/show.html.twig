{% extends 'base.html.twig' %}

{% block pageheader %} 
    <h1>Keyword</h1>
{% endblock %} 

{% block body %}

    <div class="btn-toolbar">
        <div class="btn-group pull-right">
            <a href="{{ path('keyword_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
        </div>
    </div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Keyword</th>
                <td>{{ keyword.label }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if keyword.created %}{{ keyword.created|date }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if keyword.updated %}{{ keyword.updated|date }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    {% if keyword.videos %}
    <h2>Videos</h2>
        <div class="btn-toolbar">
            <div class="btn-group pull-right">
                <a href="{{ path('keyword_details_download', {'id': keyword.id}) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-download"></span> Download
                </a>
            </div>
        </div>
        <table class="table table-bordered table-condensed table-striped table-hover tablesort">
            <thead>
                <tr>
                    <th>Video</th>
                    <th>Figuration</th>
                </tr>
            </thead>
            {% for video in videos %}
                <tr>
                    <td><a href="{{ path('video_show', {'id': video.id}) }}">{{ video }}</a></td>
                    <td>
                        {% if video.figuration %}
                            <a href="{{ path('figuration_show', {'id': video.figuration.id}) }}">{{ video.figuration }}</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bower/jquery-tablesort/jquery.tablesort.min.js') }}"></script>
    <script>
        (function($){$('.tablesort').tablesort();})(jQuery);
    </script>
{% endblock %}
